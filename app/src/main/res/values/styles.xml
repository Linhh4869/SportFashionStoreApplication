<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SportFashionStore.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="postSplashScreenTheme">@style/Theme.SportFashionStore</item>
    </style>

    <style name="style_edit_text">
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:fontFamily">@font/sarabun_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/model_black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:paddingStart">12dp</item>
    </style>

    <style name="tv_error" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/sailing_coral_red</item>
        <item name="fontFamily">@font/sarabun_semi_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="common_tv" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sarabun_semi_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="style_spinner">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
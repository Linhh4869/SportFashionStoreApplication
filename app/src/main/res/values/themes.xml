<resources >
    <style name="Base.Theme.SportFashionStore" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/new_black</item>
        <item name="colorOnSurface">@color/new_black</item>
        <item name="android:textColor">@color/new_black</item>
    </style>

    <style name="Theme.SportFashionStore" parent="Base.Theme.SportFashionStore" >
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="colorControlNormal">@color/new_black</item>
        <item name="colorOnSurface">@color/new_black</item>
        <item name="android:textColor">@color/new_black</item>
    </style>

    <style name="CustomBottomNavigationTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="colorControlNormal">@color/new_black</item>
        <item name="colorOnSurface">@color/new_black</item>
        <item name="android:textColor">@color/new_black</item>
    </style>

    <style name="Theme_Dialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_standby"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/img_jordan_standby"
        android:scaleType="fitXY"
        android:background="@drawable/bg_white_button"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_start"
        android:background="@color/light_gray"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/img_standby"
            android:layout_gravity="center"
            android:scaleType="fitXY"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_splash"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="24sp"
            android:fontFamily="@font/fs_pf_beau_sans_pro_semi_bold"
            android:textColor="@color/sailing_sky_blue"
            android:layout_marginVertical="30dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/img_standby"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_white_button"
        android:layout_marginTop="-20dp"
        android:text="@string/tv_start"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="@font/sarabun_bold"
        android:textColor="@color/sailing_navy_blue"
        android:elevation="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>